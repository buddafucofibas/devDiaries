extends ../layout
block content
    .container.edit
        form(action='/authors/' + author._id + '/image' method='post' enctype='multipart/form-data')
            .auth_edit 
                .flexcol
                    label(for='user_pic') Upload image
                    input.inpt(type='file' id='user_pic' name='image' required)
                button.btn Submit
        form(action='/authors/' + author._id + '?_method=PATCH' method='POST')
            .auth_edit
                .flexcol
                    label(for='firstName') First Name
                    input.inpt(type='text' id='firstName' name='firstName' value= author.firstName required)
                .flexcol
                    label(for='lastName') Last Name
                    input.inpt(type='text' id='lastName' name='lastName' value= author.lastName required)
                .flexcol
                    label(for='email') Email
                    input.inpt(type='email' id='email' name='email' value= author.email required)
                button.btn Edit