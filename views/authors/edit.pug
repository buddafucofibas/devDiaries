extends ../layout
block content
    h1 Form for editing #{author.firstName}'s information

    form(action='/authors/' + author._id + '?_method=PATCH' method='POST')
        div
            label(for='firstName') First Name
            input(type='text' id='firstName' name='firstName' value= author.firstName required)
        div
            label(for='lastName') Last Name
            input(type='text' id='lastName' name='lastName' value= author.lastName required)
        div
            label(for='email') Email
            input(type='email' id='email' name='email' value= author.email required)
        
        button Submit