extends ../layout

block content
    .container.post_home
        form(action='/posts/' + post._id + '?_method=PATCH' method='POST')
            .post
                .flexcol
                    label(for='title') Title
                    input.inpt(type='text' id='title' name='title' value=post.title required)
                .flexcol
                    label(for='content') Post
                    textarea.inpt(id='content' name='content' required) #{post.content}
                button.btn(type="submit") Edit Post        